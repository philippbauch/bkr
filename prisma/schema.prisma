generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Order {
  ASC
  DESC
}

model Result {
  team      Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  station   Station @relation(fields: [stationId], references: [id], onDelete: Cascade)
  stationId String

  checkIn  DateTime  @default(now())
  checkOut DateTime?
  points   Int       @default(0)

  @@id([teamId, stationId])
}

model Station {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  results   Result[]

  name    String
  number  Int      @unique
  members String[]

  code  String @unique
  order Order
}

model Team {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  results   Result[]

  name    String
  number  Int      @unique
  members String[]

  startedAt  DateTime?
  finishedAt DateTime?
  penalty    Int       @default(0)
}
