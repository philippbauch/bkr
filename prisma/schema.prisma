generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Order {
  ASC
  DESC
}

model Team {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name    String
  number  Int      @unique
  members String[]

  startedAt  DateTime?
  finishedAt DateTime?
}

model Station {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name    String
  number  Int      @unique
  members String[]
  order   Order

  code String @unique
}
